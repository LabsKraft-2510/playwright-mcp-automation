{
  "name": "playwright-mcp-automation",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Enterprise-grade AI-powered test automation framework with Playwright and MCP integration",
  "keywords": [
    "playwright",
    "test-automation",
    "mcp",
    "claude",
    "page-object-model",
    "data-driven"
  ],
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:single": "playwright test tests/login.spec.ts --headed",
    "report": "playwright show-report",
    "generate:data": "ts-node scripts/generate-test-data.ts",
    "generate:framework": "ts-node scripts/generate-framework.ts",
    "setup": "bash scripts/init.sh",
    "setup:db": "bash scripts/setup-db.sh",
    "lint": "eslint src tests --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "mysql2": "^3.15.3",
    "xlsx": "^0.18.5"
  }
}
